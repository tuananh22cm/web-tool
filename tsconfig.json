{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["dom"],
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "allowJs": true,
        "sourceMap": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
